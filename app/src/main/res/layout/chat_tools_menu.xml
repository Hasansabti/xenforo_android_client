<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/send_box"
    android:padding="5dp"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/strikebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/italicbtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/strikeformat" />

    <ImageButton
        android:id="@+id/italicbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        app:srcCompat="@drawable/italictext" />

    <ImageButton
        android:id="@+id/boldbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/strikebtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/boldtext" />

    <ImageView
        android:id="@+id/colorbtn"
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_below="@+id/boldbtn"
        android:layout_alignEnd="@+id/strikebtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="6dp"
        app:srcCompat="@drawable/colorselect" />
</RelativeLayout>